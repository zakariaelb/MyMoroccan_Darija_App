<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="digiplus.ma.mydarijaapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ColorsActivity" android:label="@string/Colors"/>
        <activity android:name=".FamilyActivity" android:label="@string/Family"/>
        <activity android:name=".NumberActivity" android:label="@string/Numbers"/>
        <activity android:name=".PhrasesActivity" android:label="@string/Phrases"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>